<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <com.supermandelivery.Fonts.TextViewNormal
        android:id="@+id/item_desc_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="@string/what_item_do"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/instructions_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_desc_textView"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions_listView"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.supermandelivery.Fonts.EditTextNormal
            android:id="@+id/instructions_editText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="@string/instructions"
            android:inputType="textCapSentences"
            android:textColorHint="@color/gray_lighter" />

        <com.supermandelivery.Fonts.ButtonViewBold
            android:id="@+id/done_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/round_corner_bg"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textColorHint="@color/gray_very_light"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>