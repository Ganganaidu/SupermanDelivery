<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <com.supermandelivery.Fonts.TextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/price_details"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/darkBlue"
        android:textStyle="bold" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/darkBlue"
        android:padding="15dp" />

    <com.supermandelivery.Fonts.TextViewBold
        android:id="@+id/total_distance_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="37 Km"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darkBlue"
        android:textStyle="bold" />

    <com.supermandelivery.Fonts.TextViewBold
        android:id="@+id/cost_estimate_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="RS.10 PER KM"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darkBlue"
        android:textStyle="bold" />

    <com.supermandelivery.Fonts.TextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/minimum_charge"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/darkBlue"
        android:textStyle="bold" />

    <com.supermandelivery.Fonts.TextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/allowed_weight"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/darkBlue"
        android:textStyle="bold" />

    <com.supermandelivery.Fonts.ButtonViewBold
        android:id="@+id/cost_estimation_done"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_pressed_blue"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>